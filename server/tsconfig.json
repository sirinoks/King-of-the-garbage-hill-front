{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "resolveJsonModule": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "rootDir": "./src",
      "outDir": "./dist",
    },
    "include": [
      "src/**/*",
      "src/**/*.d.ts"
    ]
}